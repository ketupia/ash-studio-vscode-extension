{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/chevrotain/ashLexerParser.js",
    "src/chevrotain/CstToAshSections.ts",
    "src/chevrotain/testParser.js"
  ],
  "exclude": ["node_modules"]
}
