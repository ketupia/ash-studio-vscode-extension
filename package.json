{
  "name": "ash-studio",
  "displayName": "Ash Studio",
  "description": "Ash Framework VSCode Extension",
  "publisher": "ketupia",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ketupia/ash-studio-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/ketupia/ash-studio-vscode-extension/issues"
  },
  "homepage": "https://github.com/ketupia/ash-studio-vscode-extension#readme",
  "license": "MIT",
  "icon": "ash-studio-logo.png",
  "main": "./dist/src/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "ash-studio.gotoSection",
        "title": "Go to Ash Section..."
      },
      {
        "command": "ash-studio.revealSectionOrSubBlock",
        "title": "Reveal Ash Section"
      }
    ],
    "languages": [],
    "views": {
      "explorer": [
        {
          "id": "ashSidebar",
          "name": "Ash Studio"
        }
      ]
    },
    "configuration": {
      "title": "Ash Studio",
      "properties": {
        "ashStudio.logLevel": {
          "type": "number",
          "default": 2,
          "enum": [
            0,
            1,
            2,
            3
          ],
          "enumDescriptions": [
            "Error only",
            "Error + Warning",
            "Error + Warning + Info",
            "All logs (including Debug)"
          ],
          "description": "Set the logging level for Ash Studio output"
        },
        "ashStudio.parserStrategy": {
          "type": "string",
          "default": "configuration-driven",
          "enum": [
            "configuration-driven"
          ],
          "enumDescriptions": [
            "Use the configuration-driven parser"
          ],
          "description": "Parser strategy for Ash files (only configuration-driven parser is available)"
        },
        "ashStudio.enablePerformanceMetrics": {
          "type": "boolean",
          "default": false,
          "description": "Enable performance monitoring and metrics collection"
        },
        "ashStudio.sidebarAutoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh sidebar when file changes"
        },
        "ashStudio.parseDebounceMs": {
          "type": "number",
          "default": 300,
          "minimum": 100,
          "maximum": 2000,
          "description": "Debounce delay in milliseconds for parsing file changes"
        },
        "ashStudio.maxCacheSize": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 1000,
          "description": "Maximum number of parsed files to keep in cache"
        },
        "ashStudio.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable CodeLens for Ash sections (experimental)"
        },
        "ashStudio.enableHoverInfo": {
          "type": "boolean",
          "default": false,
          "description": "Enable hover information for Ash constructs (experimental)"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "quality": "npm run type-check && npm run lint && npm run format:check && npm test",
    "build": "tsc",
    "package": "npm run quality && npm run build && vsce package",
    "pre-commit": "rm -f test-*.js crash-*.js *.tmp *.temp && npm run quality",
    "pretest": "npm run build",
    "test": "mocha test/organized-parser.test.js",
    "test:parsers": "mocha 'test/unit/parsers/**/*.test.js'",
    "test:config": "mocha 'test/unit/parsers/configurationDriven/*.test.js'",
    "test:vscode": "node ./dist/test/runTest.js"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.9",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
